<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="res_config_settings_purchase_rule_view_form" model="ir.ui.view">
      <field name="name">res.config.settings.purchase.rule.view.form</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='po_order_approval']" position="replace">
          <field name="po_order_approval" readonly="1"/>
          <div class="col-12 col-lg-6 o_setting_box text-danger mt-2">
            The option of purchase order validation by managers is currently unavailable
            because of the installation of the module named <code>purchase_order_approval_group</code>.
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
