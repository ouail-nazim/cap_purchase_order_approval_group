<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="purchase_order_approvals_tree_view" model="ir.ui.view">
            <field name="name">purchase.order.approvals.list</field>
            <field name="model">purchase.order.approvals</field>
            <field name="arch" type="xml">
                <list editable="bottom" create="0" delete="0" edit="0">
                    <field name="user_id"/>
                    <field name="purchase_order_id"/>
                    <field name="group_id"/>
                    <field name="status" widget="badge"
                        decoration-danger="status  == 'to_approve'"
                        decoration-success="status == 'approved'"/>
                </list>
            </field>
        </record>

        <record id="open_approvals" model="ir.actions.act_window">
            <field name="name">Purchase approvals</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order.approvals</field>
            <field name="view_mode">list</field>
            <field name="view_id" eval="purchase_order_approvals_tree_view"/>
            <field name="context">{'search_default_group_purchase_order_id': 1, 'search_default_group_status': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Approvals found. Let's add one!
                </p>
            </field>
        </record>

        <menuitem
                action="open_approvals"
                id="menu_purchase_approvals"
                name="Approvals"
                parent="menu_purchase_approval_conf_root"
                sequence="99"
                groups="base.group_system"
        />

    </data>
</odoo>
