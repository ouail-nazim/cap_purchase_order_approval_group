<odoo>
    <data>
      <record id="notify_higher_group_for_purchase_approval" model="mail.template">
          <field name="name">Purchase approval</field>
          <field name="model_id" ref="purchase.model_purchase_order"/>
          <field name="email_from">{{(object.user_id.email_formatted or user.email_formatted)}}</field>
          <field name="email_to">{{object.must_send_mail(object.amount_total)}}</field>
          <field name="subject">#{{object.name or object.id}} approbation</field>
          <field name="body_html"><![CDATA[
            <t t-set="recipients" t-value="object.must_send_mail(object.amount_total)"/>
            <p>Dear approvers,</p>
            <ul>
              <t t-foreach="recipients" t-as="recipient">
                <li><t t-out="recipient.name"/></li>
              </t>
            </ul>
            <p>You've been asked for your approbation for the PO #<t t-out="object.name"/>.</p>
          ]]></field>

      </record>
    </data>
</odoo>
